class Solution {
    public int solution(int[] A) {
        // write your code in C# 6.0 with .NET 4.5 (Mono)
        
        Array.Sort(A);
        
        
        for(int j=2;j<A.Length;j++){
            long suma=(long)A[j-2]+A[j-1];    
            
            if (suma>A[j]){
                return 1;   
            }
        }
        
        
        return 0;
    }
}
